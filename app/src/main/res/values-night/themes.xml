<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookNest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FragmentBG" parent="Theme.BookNest">
        <item name="android:background">@color/blackBg</item>
    </style>

    <style name="InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/error_color</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="errorEnabled">true</item>
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="InputText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="LoginAndSignupButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:background">@drawable/rounded_box_light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NewAccountButton" parent="Theme.BookNest">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:background">@drawable/rounded_box_light_blue</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="progressBar" parent="Theme.BookNest">
        <item name="android:indeterminateTint">@color/light_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:paddingTop">@dimen/_27sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="bottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
        <item name="itemIconSize">@dimen/_18sdp</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color_dark</item>
        <item name="itemTextAppearanceActiveBoldEnabled">true</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color_dark</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/dark_grey</item> <!-- Color for the active indicator -->
    </style>

    <style name="horizontal_layout_view" parent="Theme.BookNest">
        <item name="android:background">@drawable/rounded_box</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_width">@dimen/_180sdp</item>
        <item name="android:layout_height">@dimen/_242sdp</item>
        <item name="android:paddingStart">@dimen/_3sdp</item>
        <item name="android:paddingEnd">@dimen/_3sdp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="image_decoration" parent="Theme.BookNest">
        <item name="android:radius">@dimen/_5sdp</item>
        <item name="android:background">@drawable/image_decoration_dark</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
    </style>

    <style name="chapter_no_box" parent="Theme.BookNest">
        <item name="android:background">@drawable/rounded_box</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
    </style>
    <style name="chapter_layout_bg" parent="Theme.BookNest">
        <item name="android:background">@color/black</item>
    </style>

    <style name="pdfBG" parent="Theme.BookNest">
        <item name="android:background">@color/blackBg</item>
    </style>

    <style name="iconsTintColor" parent="Theme.BookNest">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="bookDetailsImage" parent="Theme.BookNest">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@drawable/bottom_rounded</item>
    </style>

    <style name="vertical_layout_view" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/black</item>
    </style>
</resources>