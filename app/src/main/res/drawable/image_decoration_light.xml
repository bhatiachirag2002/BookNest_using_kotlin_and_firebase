<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="transparent" >

    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#FFFFFF"/> <!-- Background color -->
        </shape>
    </item>

    <!-- Right and Bottom Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8C000000"
                android:endColor="@android:color/transparent"
                android:angle="135"/> <!-- Creates shadow from top-left to bottom-right -->
        </shape>
    </item>

</layer-list>
